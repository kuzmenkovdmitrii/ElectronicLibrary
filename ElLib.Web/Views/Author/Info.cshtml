@model ElLib.Common.Entities.Author

@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-lg-5">
            <div class="card">
                @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                {
                    <h5 class="card-header info-color white-text text-center py-3">
                        <strong>Подробная информация</strong>
                        <a class="btn-floating blue darken-3 float-right" title="Редактировать" style="height: 30px; width: 30px; margin: 0" href="@Url.Action("Edit", "Author", new {id = @Model.Id})">
                            <i class="fas fa-pencil-alt" style="font-size: 1rem; line-height: 0px"></i>
                        </a>
                    </h5>
                }
                else
                {
                    <h5 class="card-header info-color white-text text-center py-3">
                        <strong>Подробная информация</strong>
                    </h5>
                }
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th scope="row" class="text-black-50">Фамилия</th>
                            <td>@Model.LastName</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-black-50">Имя</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-black-50">Отчество</th>
                            <td>@Model.MiddleName</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-black-50">Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-black-50">Книги</th>
                            <td>
                                @using (Html.BeginForm("All", "Book"))
                                {
                                    <input type="hidden" value="@Model.Id" name="Authors" />
                                    <input type="submit" class="btn text-white info-color btn-sm btn-rounded" value="Все книги автора" />
                                }
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>