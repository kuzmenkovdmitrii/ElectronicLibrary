@model ElLib.Web.Models.LoginUserModel

@{
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Вход</strong>
                </h5>
                <div class="card-body px-md-4">
                    @using (Html.BeginForm("Login", "Auth"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="md-form">
                            @Html.TextBoxFor(x => x.UserName, new
                            {
                                @class = "form-control",
                                @placeholder = @Html.DisplayNameFor(x => x.UserName)
                            })
                            <span>@Html.ValidationMessageFor(x => x.UserName)</span>
                        </div>
                        <div class="md-form">
                            @Html.TextBoxFor(x => x.Password, new
                            {
                                @class = "form-control",
                                @type = "password",
                                @placeholder = @Html.DisplayNameFor(x => x.Password)
                            })
                            <span>@Html.ValidationMessageFor(x => x.Password)</span>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="materialLoginFormRemember">
                                    <label class="form-check-label" for="materialLoginFormRemember">Запомнить</label>
                                </div>
                            </div>
                            <div>
                                <a href="#">Забыли пароль?</a>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-rounded btn-outline-info btn-block" value="Войти" style="margin-top: 15px; margin-bottom: 15px;" />
                            <input type="button" class="btn btn-rounded btn-outline-blue-grey btn-block" Value="Выход" style="margin-bottom: 15px" onclick="location.href = '@Url.Action("Index", "Home")'" />
                        </div>
                        <p class="text-center">
                            Нет аккаунта?
                            <a href="@Url.Action("Registration","Home")">Зарегистрироваться</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>