@model IEnumerable<ElLib.Common.Entity.BookCategory>

@{
    ViewBag.Title = "Жанры";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container" style="margin-bottom: 15px;margin-top:15px">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-3">
                    <strong>Жанры</strong>
                </h5>
                <table class="table table-hover">
                    <tbody id="results">
                        @foreach (var bookCategory in Model)
                        {
                        <tr class="changes">
                            <td style="width: 35%;">
                                @bookCategory.Name
                            </td>
                            <td style="width: 65%;">
                                @bookCategory.Description
                            </td>
                            <td class="td-pad" style="width: 50px">
                                <a class="btn-floating btn-sm primary-color" href="@Url.Action("Info", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa-edit"></i></a>
                            </td>
                            <td class="td-pad" style="width: 50px">
                                <a class="btn-floating btn-sm primary-color" href="@Url.Action("Edit", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa-edit"></i></a>
                            </td>
                            <td class="td-pad" style="width: 50px">
                                <a class="btn-floating btn-sm danger-color" href="@Url.Action("Delete", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa-close"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <a class="btn btn-info" href="@Url.Action("Add", "BookCategory")">Создать</a>
        </div>
    </div>
</div>