@model IEnumerable<ElLib.Common.Entity.Author>

@{
    ViewBag.Title = "Авторы";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<script>
    $(document).ready(function () {
        $("#search").on("input", function (e) {
            var query = $("#search").val();
            console.log(query);

            $.ajax({
                url: '@Url.Action("Search", "Author")',
                data: 'query=' + query,
                type: 'get',
                success: function (result) {
                    $('#results').html(result);
                }
            });
        });
    });
</script>

<div class="container" style="margin-bottom: 15px;margin-top:15px">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-3">
                    <strong>Авторы</strong>
                </h5>
                <form class="form-inline md-form">
                    <input class="form-control" id="search" style="margin: 0px 15px -20px 15px; width: 100%" type="text" placeholder="Поиск" aria-label="Поиск">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </form>
                <table class="table table-hover">
                    <tbody id="results">
                    @Html.Action("Search","Author", new {query = ""})
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <a class="btn btn-info" href="@Url.Action("Create", "Author")">Создать</a>
        </div>
    </div>
</div>
