@model ElLib.Web.Models.LoginUserModel

@{
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-3">
                    <strong>Вход</strong>
                </h5>
                <div class="card-body px-md-4">
                    @using (Html.BeginForm("Login", "Auth"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="md-form">
                            @Html.TextBoxFor(x => x.UserName, new
                            {
                                @class = "form-control",
                                @placeholder = @Html.DisplayNameFor(x => x.UserName)
                            })
                            @Html.ValidationMessageFor(x => x.UserName)
                        </div>
                        <div class="md-form">
                            @Html.TextBoxFor(x => x.Password, new
                            {
                                @class = "form-control",
                                @type = "password",
                                @placeholder = @Html.DisplayNameFor(x => x.Password)
                            })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="d-flex">
                            <div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="Remember" id="Remember">
                                    <label class="form-check-label" for="Remember">Запомнить</label>
                                </div>
                            </div>
                        </div>
                        <div class="md-form">
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-rounded btn-outline-info btn-block" value="Войти" style="margin-top: 15px; margin-bottom: 15px;" />
                        </div>
                        <p class="text-center">
                            Нет аккаунта?
                            <a href="@Url.Action("Registration","Auth")">Зарегистрироваться</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>