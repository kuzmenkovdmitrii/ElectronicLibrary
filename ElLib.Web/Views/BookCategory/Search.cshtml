@model IEnumerable<ElLib.Common.Entities.BookCategory>

@foreach (var bookCategory in Model)
{
    <tr class="changes">
        <td style="width: 35%;">
            @bookCategory.Name
        </td>
        <td style="width: 65%;">
            @bookCategory.Description
        </td>
        <td class="td-pad" style="width: 50px">
            <a class="btn-floating btn-sm info-color float-right" title="Подробнее" href="@Url.Action("Info", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa fa-info"></i></a>
        </td>
        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
        {
            <td class="td-pad" style="width: 50px">
                <a class="btn-floating btn-sm primary-color float-right" title="Редактировать" href="@Url.Action("Edit", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa-edit"></i></a>
            </td>
            <td class="td-pad" style="width: 50px;margin-left: 10px">
                <a class="btn-floating btn-sm danger-color float-right" title="Удалить" href="@Url.Action("Delete", "BookCategory", new {id = bookCategory.Id})"><i class="fa fa-close"></i></a>
            </td>
        }
    </tr>
}