@model IEnumerable<ElLib.Web.Models.PublishingModel>

@{
    ViewBag.Title = "Издательства";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container" style="margin-bottom: 15px;margin-top:15px">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-3">
                    <strong>Языки</strong>
                </h5>
                <table class="table table-hover">
                    <tbody id="results">
                    @foreach (var publishing in Model)
                    {
                        <tr class="changes">
                            <td style="width: 30%;">
                                @publishing.Name
                            </td>
                            <td style="width: 50%;">
                                @publishing.Address.Country.Name @publishing.Address.City.Name @publishing.Address.Street @publishing.Address.Home
                                    shing.Address.Home
                            </td>
                            <td class="td-pad" style="width: 50px">
                                <a class="btn-floating btn-sm primary-color" href="@Url.Action("Edit", "Publishing", new {id = publishing.Id})"><i class="fa fa-edit"></i></a>
                            </td>
                            <td class="td-pad" style="width: 50px">
                                <a class="btn-floating btn-sm danger-color" href="@Url.Action("Delete", "Publishing", new {id = publishing.Id})"><i class="fa fa-close"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>