@model IEnumerable<ElLib.Common.Entity.Author>

@{
    ViewBag.Title = "Авторы";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container" style="margin-bottom: 15px;margin-top:15px">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-3">
                    <strong>Авторы</strong>
                </h5>
                <table class="table table-hover">
                    <tbody id="results">
                        @foreach (var author in Model)
                        {
                            <tr class="changes">
                                <td style="width: 65%;">
                                    @author.Name @author.LastName @author.MiddleName
                                </td>
                                <td class="td-pad" style="width: 50px">
                                    <a class="btn-floating btn-sm info-color" href="@Url.Action("Edit", "Author", new {id = author.Id})"><i class="fa fa-info"></i></a>
                                </td>
                                <td class="td-pad" style="width: 50px">
                                    <a class="btn-floating btn-sm primary-color" href="@Url.Action("Edit", "Author", new {id = author.Id})"><i class="fa fa-edit"></i></a>
                                </td>
                                <td class="td-pad" style="width: 50px">
                                    <a class="btn-floating btn-sm danger-color" href="@Url.Action("Delete", "Author", new {id = author.Id})"><i class="fa fa-close"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>